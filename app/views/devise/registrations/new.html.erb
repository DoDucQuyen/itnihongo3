<% provide :title, "サインアップ"  %>

<div class="login-card">
  <div class="container">
    <div class="row">
      <div class="col-sm-4 col-sm-offset-4">
        <br>
        <br>
        <div class="panel panel-default">
          <div class="panel-body">
            <h2 class="text-center">サインアップ</h2>
            <hr>
            <%= form_for resource, as: resource_name, url: registration_path(resource_name) do |f| %>
              <%= devise_error_messages! %>

              <div class="form-group pmd-textfield pmd-textfield-floating-label">
                <%= f.label "ユーザー名", class: "control-label pmd-input-group-label" %>
                <div class="input-group">
                  <div class="input-group-addon">
                    <i class="material-icons md-dark pmd-sm">perm_identity</i>
                  </div>
                  <%= f.text_field :name, autofocus: true, class: "form-control", required: true %>
                </div>
              </div>

              <div class="form-group pmd-textfield pmd-textfield-floating-label">
                <%= f.label "Eメール", class: "control-label pmd-input-group-label" %>
                <div class="input-group">
                  <div class="input-group-addon">
                    <i class="material-icons md-dark pmd-sm">perm_identity</i>
                  </div>
                  <%= f.email_field :email, autofocus: true, class: "form-control", required: true %>
                </div>
              </div>

              <div class="form-group pmd-textfield pmd-textfield-floating-label">
                <%= f.label "パスワード", class: "control-label pmd-input-group-label" %>
                <div class="input-group">
                  <div class="input-group-addon">
                    <i class="material-icons md-dark pmd-sm">lock_outline</i>
                  </div>
                  <%= f.password_field :password, autocomplete: "off", class: "form-control", required: true %>
                </div>
              </div>

              <div class="form-group pmd-textfield pmd-textfield-floating-label">
                <%= f.label "パスワード確認", class: "control-label pmd-input-group-label" %>
                <div class="input-group">
                  <div class="input-group-addon">
                    <i class="material-icons md-dark pmd-sm">lock_outline</i>
                  </div>
                  <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", required: true %>
                </div>
              </div>

              <hr>
              <div class="actions">
                <%= f.submit "サインアップ", class: "btn btn-primary btn-block" %>
              </div>
            <% end %>

            <div class="text-center">
              <hr >
              <%= render "devise/shared/links" %>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
